# Production Environment Configuration
# These values will be overridden by Render's environment variables
SECRET_KEY=render_will_generate_this
JWT_SECRET_KEY=render_will_generate_this
DATABASE_URL=postgresql://trading_user:password@localhost:5432/trading_journal
CORS_ORIGINS=*
FLASK_ENV=production
FLASK_APP=wsgi:application
PYTHONUNBUFFERED=1

# Frontend configuration
VITE_API_URL=/api
VITE_APP_ENV=production
VITE_APP_NAME=Trading Platform
VITE_APP_VERSION=1.0.0

# Security headers
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'

# Performance
WORKERS=4
TIMEOUT=120
GRACEFUL_TIMEOUT=30
KEEPALIVE=5

VITE_API_BASE_URL=http://localhost:5003
